{
  "name": "dev-aws-daily-cost-reporter",
  "image": "mcr.microsoft.com/devcontainers/base:bookworm",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "username": "developer",
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/go:1": {},
    "ghcr.io/devcontainers/features/node:1": {
      "version": "24"
    },
    "ghcr.io/devcontainers/features/dotnet:1": {},
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/java:1": {},
    "ghcr.io/devcontainer-community/devcontainer-features/astral.sh-uv:1": {
      "shellautocompletion": true
    }
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "mounts": [
    "target=/workspace/node_modules"
  ],
  "remoteUser": "developer",
  "remoteEnv": {
    "npm_config_loglevel": "error"
  },
  "postCreateCommand": {
    "Chown workspace": "sudo chown -R $(whoami): /workspace",
    "Install AWSDAC (Diagram as Code)": "go install github.com/awslabs/diagram-as-code/cmd/awsdac@latest"
  }
}
